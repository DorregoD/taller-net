5)
           int num,suma,elementos;
          float media
  Console.WriteLine("Introduzca un numero: ");
       num=n.nextInt();
       
       suma=0;
       elementos=0;
       
       while(num>=0){//Nos interesan los positivos y el cero.
           
           suma+=num;
           elementos++;
           
            Console.WriteLine("Introduzca otro numero: ");
           num=n.nextInt();
       }
       if(elementos==0){//Daria un error de division por cero.
           
            Console.WriteLine("Imposible hacer la media");
           
       }
       else{
           media=(float)suma/elementos;
            Console.WriteLine("La media es de: "+media);
       }
